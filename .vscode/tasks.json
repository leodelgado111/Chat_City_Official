{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug APK",
            "type": "shell",
            "command": "${workspaceFolder}/gradlew.bat",
            "args": ["assembleDebug"],
            "windows": {
                "command": "${workspaceFolder}\\gradlew.bat"
            },
            "linux": {
                "command": "${workspaceFolder}/gradlew"
            },
            "osx": {
                "command": "${workspaceFolder}/gradlew"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gradle"
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "${workspaceFolder}/gradlew.bat",
            "args": ["clean"],
            "windows": {
                "command": "${workspaceFolder}\\gradlew.bat"
            },
            "linux": {
                "command": "${workspaceFolder}/gradlew"
            },
            "osx": {
                "command": "${workspaceFolder}/gradlew"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gradle"
        },
        {
            "label": "Install Debug on Device",
            "type": "shell",
            "command": "${workspaceFolder}/gradlew.bat",
            "args": ["installDebug"],
            "windows": {
                "command": "${workspaceFolder}\\gradlew.bat"
            },
            "linux": {
                "command": "${workspaceFolder}/gradlew"
            },
            "osx": {
                "command": "${workspaceFolder}/gradlew"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gradle",
            "dependsOn": ["Build Debug APK"]
        },
        {
            "label": "Generate R Files",
            "type": "shell",
            "command": "${workspaceFolder}/gradlew.bat",
            "args": ["generateDebugRFile", "generateDebugBuildConfig"],
            "windows": {
                "command": "${workspaceFolder}\\gradlew.bat"
            },
            "linux": {
                "command": "${workspaceFolder}/gradlew"
            },
            "osx": {
                "command": "${workspaceFolder}/gradlew"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gradle"
        },
        {
            "label": "Sync Project",
            "type": "shell",
            "command": "${workspaceFolder}/gradlew.bat",
            "args": ["build", "--refresh-dependencies"],
            "windows": {
                "command": "${workspaceFolder}\\gradlew.bat"
            },
            "linux": {
                "command": "${workspaceFolder}/gradlew"
            },
            "osx": {
                "command": "${workspaceFolder}/gradlew"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gradle"
        },
        {
            "label": "Launch App",
            "type": "shell",
            "command": "adb",
            "args": [
                "shell",
                "am",
                "start",
                "-n",
                "com.chatcityofficial.chatmapapp/.SplashActivity"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}