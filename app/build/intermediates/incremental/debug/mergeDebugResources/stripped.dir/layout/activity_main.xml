<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D0D"
    android:fitsSystemWindows="false">

    <FrameLayout
        android:id="@+id/nav_host_fragment_activity_main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- 5whitebase floating action button, 50dp above nav bar, aligned to right edge -->
    <ImageView
        android:id="@+id/floating_5whitebase"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:src="@drawable/ic_5whitebase"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/compose_nav_bar"
        app:layout_constraintEnd_toEndOf="@+id/compose_nav_bar"
        android:layout_marginBottom="40dp" />
    
    <!-- 5strongergradient overlay with 80% opacity -->
    <ImageView
        android:id="@+id/floating_5strongergradient"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:src="@drawable/ic_5strongergradient"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="@+id/floating_5whitebase"
        app:layout_constraintEnd_toEndOf="@+id/floating_5whitebase"
        app:layout_constraintStart_toStartOf="@+id/floating_5whitebase"
        app:layout_constraintTop_toTopOf="@+id/floating_5whitebase" />
    
    <!-- 5rightarrow overlay on bottom button -->
    <ImageView
        android:id="@+id/floating_5rightarrow"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:src="@drawable/ic_5rightarrow"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="@+id/floating_5whitebase"
        app:layout_constraintEnd_toEndOf="@+id/floating_5whitebase"
        app:layout_constraintStart_toStartOf="@+id/floating_5whitebase"
        app:layout_constraintTop_toTopOf="@+id/floating_5whitebase" />
    
    <!-- Duplicate 5whitebase floating action button, 10dp above the first one -->
    <ImageView
        android:id="@+id/floating_5whitebase_2"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:src="@drawable/ic_5whitebase"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/floating_5whitebase"
        app:layout_constraintEnd_toEndOf="@+id/floating_5whitebase"
        android:layout_marginBottom="15dp" />
    
    <!-- Duplicate 5strongergradient overlay -->
    <ImageView
        android:id="@+id/floating_5strongergradient_2"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:src="@drawable/ic_5strongergradient"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="@+id/floating_5whitebase_2"
        app:layout_constraintEnd_toEndOf="@+id/floating_5whitebase_2"
        app:layout_constraintStart_toStartOf="@+id/floating_5whitebase_2"
        app:layout_constraintTop_toTopOf="@+id/floating_5whitebase_2" />
    
    <!-- 5leftarrow overlay on top button -->
    <ImageView
        android:id="@+id/floating_5leftarrow"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:src="@drawable/ic_5leftarrow"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="@+id/floating_5whitebase_2"
        app:layout_constraintEnd_toEndOf="@+id/floating_5whitebase_2"
        app:layout_constraintStart_toStartOf="@+id/floating_5whitebase_2"
        app:layout_constraintTop_toTopOf="@+id/floating_5whitebase_2" />

    <!-- Custom navigation bar using Jetpack Compose -->
    <!-- The bottom margin will be set dynamically to system nav bar height + 37dp -->
    <com.chatcityofficial.chatmapapp.ui.compose.navigation.ComposeBottomNavigationView
        android:id="@+id/compose_nav_bar"
        android:layout_width="334dp"
        android:layout_height="68dp"
        android:elevation="32dp"
        android:outlineProvider="bounds"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>