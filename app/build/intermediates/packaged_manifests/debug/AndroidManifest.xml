            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Activity -->
        <activity
            android:name="com.chatcityofficial.chatmapapp.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.ChatCityOfficial" />

