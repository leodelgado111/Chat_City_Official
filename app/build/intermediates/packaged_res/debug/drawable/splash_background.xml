<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="@color/splash_gradient_start"
                android:centerColor="@color/splash_gradient_center"
                android:endColor="@color/splash_gradient_end"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Logo in center - using item with drawable instead of bitmap -->
    <item
        android:drawable="@drawable/chat_city_logo"
        android:gravity="center" />
</layer-list>