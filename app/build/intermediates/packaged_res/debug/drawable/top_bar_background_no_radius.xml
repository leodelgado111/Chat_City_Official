<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- White background with 90% opacity -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E6FFFFFF" />
        </shape>
    </item>
    
    <!-- Gradient overlay with reduced opacity - same colors as nav bar but 90% overall -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#7398D5F1"
                android:centerColor="#73CAADE6"
                android:endColor="#3AFC86BC"
                android:angle="45" />
        </shape>
    </item>
    
    <!-- Bottom stroke only -->
    <item android:top="-3dp" android:left="-3dp" android:right="-3dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
            <stroke 
                android:width="2dp" 
                android:color="#000000" />
        </shape>
    </item>
    
</layer-list>