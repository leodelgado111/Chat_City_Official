<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <com.mapbox.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:mapbox_resourcesAccessToken="@string/mapbox_access_token"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Chat City Logo (left margin matches nav bar: 20dp) -->
    <ImageView
        android:id="@+id/chatCityLogo"
        android:layout_width="138dp"
        android:layout_height="46dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/chat_city_logo"
        android:contentDescription="Chat City"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Location Status (right margin matches nav bar: 20dp) -->
    <ImageView
        android:id="@+id/locationStatus"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:adjustViewBounds="true"
        android:src="@drawable/location_status"
        android:contentDescription="Dallas, TX"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/chatCityLogo"
        app:layout_constraintBottom_toBottomOf="@id/chatCityLogo" />

</androidx.constraintlayout.widget.ConstraintLayout>