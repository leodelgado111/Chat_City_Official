<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sweep gradient layer with 70% color intensity (blended with white) -->
    <item
        android:left="20dp"
        android:top="16dp"
        android:right="13dp"
        android:bottom="24dp">
        <shape android:shape="rectangle">
            <corners android:radius="30dp" />
            <gradient
                android:type="sweep"
                android:centerX="0.0"
                android:centerY="0.0"
                android:startColor="#D08FDB"
                android:centerColor="#FD8FC7"
                android:endColor="#8FA3FD" />
            <size
                android:width="360dp"
                android:height="150dp" />
        </shape>
    </item>
</layer-list>