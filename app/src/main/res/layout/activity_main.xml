<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false">

    <fragment
        android:id="@+id/nav_host_fragment_activity_main"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/mobile_navigation" />

    <!-- Custom navigation bar with proper layering -->
    <!-- The bottom margin will be set dynamically to system nav bar height + 37dp -->
    <FrameLayout
        android:id="@+id/custom_nav_bar"
        android:layout_width="334dp"
        android:layout_height="68dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:elevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        
        <!-- Layer 1: White background (bottom) -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/nav_bar_white_bg_simple" />
            
        <!-- Layer 2: Gradient layer with icons -->
        <ImageView
            android:layout_width="330dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:elevation="2dp"
            android:src="@drawable/nav_bar_gradient_icons" />
            
        <!-- Layer 3: Selection outline (top) - positioned on home icon initially -->
        <ImageView
            android:id="@+id/nav_selection_outline"
            android:layout_width="57dp"
            android:layout_height="52dp"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="74dp"
            android:elevation="4dp"
            android:src="@drawable/nav_selection_outline" />
            
        <!-- Layer 4: Invisible click areas (very top) -->
        <View
            android:id="@+id/btn_saved"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:elevation="6dp"
            android:clickable="true"
            android:focusable="true" />
            
        <View
            android:id="@+id/btn_home"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_marginStart="66dp"
            android:elevation="6dp"
            android:clickable="true"
            android:focusable="true" />
            
        <View
            android:id="@+id/btn_create"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_marginStart="132dp"
            android:elevation="6dp"
            android:clickable="true"
            android:focusable="true" />
            
        <View
            android:id="@+id/btn_chats"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_marginStart="198dp"
            android:elevation="6dp"
            android:clickable="true"
            android:focusable="true" />
            
        <View
            android:id="@+id/btn_profile"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_marginStart="264dp"
            android:elevation="6dp"
            android:clickable="true"
            android:focusable="true" />
        
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>