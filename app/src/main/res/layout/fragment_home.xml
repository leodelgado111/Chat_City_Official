<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <com.mapbox.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:mapbox_resourcesAccessToken="@string/mapbox_access_token"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Chat City Logo with custom drop shadow (centered vertically with location container) -->
    <ImageView
        android:id="@+id/chatCityLogo"
        android:layout_width="138dp"
        android:layout_height="46dp"
        android:layout_marginStart="28dp"
        android:src="@drawable/chat_city_logo_with_shadow"
        android:contentDescription="Chat City"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/locationContainer"
        app:layout_constraintBottom_toBottomOf="@id/locationContainer" />

    <!-- Location Status Container with elevation (aligned with nav bar: 28dp margin) -->
    <LinearLayout
        android:id="@+id/locationContainer"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="28dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/location_background"
        android:paddingStart="12dp"
        android:paddingEnd="16dp"
        android:elevation="8dp"
        android:outlineProvider="background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Location Icon -->
        <ImageView
            android:id="@+id/locationIcon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_location_pin"
            android:tint="@color/black"
            android:layout_marginEnd="6dp" />

        <!-- Location Text -->
        <TextView
            android:id="@+id/locationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Locating..."
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxWidth="120dp" />

    </LinearLayout>

    <!-- NO ZOOM CONTROLS - REMOVED PERMANENTLY -->
    <!-- NO GPS BUTTON - REMOVED PERMANENTLY -->

</androidx.constraintlayout.widget.ConstraintLayout>
